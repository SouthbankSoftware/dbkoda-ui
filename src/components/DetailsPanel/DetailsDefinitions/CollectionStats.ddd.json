{
	"Title": "Collection Statistics for %treeNode.parentDB%.%treeNode%",
	"DefaultValues": {
		"function": "dbenvy_CollectionStats",
		"arguments": [{
			"name": "ColId",
			"value": "treeNode"
		}, {
			"name": "parentDB",
			"value": "treeNode.parentDB"
		}]
	},
	"Fields": [
		{
			"name": "Statistics",
			"label": "Statistics",
			"type": "Table",
			"columns": [{
				"name": "statistic",
				"label": "Statistic"
			}, {
				"name": "value",
				"label": "Value"
			}]
		},
		{
			"name": "Shards",
			"label": "Shards Statistics",
			"type": "BarChart",
			"XAxis": [{
				"key": "size",
				"label": "Size in KBs",
				"color": "#382F4B"
			},{
				"key": "count",
				"label": "Count",
				"color": "#76341C"
				}],
			"YAxis" :{
				"key": "name"
			},
			"width": 600,
			"height": 300
		},
		{
			"name": "ShardsPercentage",
			"label": "Shards Percentage",
			"type": "PieChart",
			"width": 300,
			"height": 300
		}
	]
}
