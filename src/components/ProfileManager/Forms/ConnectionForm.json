        "value": "",
        "column": 2,
        "width": 0.5,
        "disabled": true,
        "checkbox": "enabled"
      }
    ]
  },
  "cluster": {
    "name": "Cluster Configuration",
    "value": "cluster",
    "tips": [
      "This page allows you to configure items specific to a replica set. Specify a comma seperated list of the hosts and ports in the replica set to get started.  Eg 'host1:port1, host2:port2, host3:port3'"
    ],
    "fields": [
      {
        "name": "useClusterConfig",
        "label": "Use Cluster Configuration",
        "value": false,
        "type": "checkbox",
        "column": 1,
        "refFields": ["hostsList", "replicaSetName", "w", "wtimeoutMS", "journal", "readPref"],
        "disabled": false,
        "checkbox": "disabled"
      },
      {
        "name": "hostsList",
        "label": "List of hosts:ports",
        "placeholder": "e.g. localhost:27017, localhost:27016",
        "options": {
          "tooltip": "If blank, we'll connect to nominated host and deduce the host list"
        },
        "value": "",
        "type": "text",
        "column": 1,
        "rules": "string",
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "replicaSetName",
        "label": "Replica Set Name",
        "value": "",
        "type": "text",
        "column": 1,
        "rules": "string",
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "w",
        "label": "w (write concern w option)",
        "options": { "tooltip": "write concern: specifiy a number, 'majority' or a tagSet" },
        "value": "",
        "type": "text",
        "column": 2,
        "rules": "string",
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "wtimeoutMS",
        "label": "wtimeoutMS",
        "options": { "tooltip": "Time in ms to wait for write concern. 0=no timeout" },
        "value": 0,
        "type": "number",
        "column": 2,
        "rules": "string",
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "journal",
        "label": "Journal",
        "options": {
          "tooltip": "Write concern 'j' option.  If true writes must journal before returning"
        },
        "value": false,
        "type": "checkbox",
        "column": 2,
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "readPref",
        "label": "Read Preference",
        "value": "",
        "options": {
          "dropdown": [
            "",
            "primary",
            "primaryPreferred",
            "secondary",
            "secondaryPreferred",
            "nearest"
          ]
        },
        "type": "select",
        "column": 2,
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "urlClusterRadio",
        "label": "Use Cluster URI instead",
        "value": false,
        "type": "checkbox",
        "column": 2,
        "refFields": ["urlCluster", "useClusterConfig"]
      },
      {
        "name": "urlCluster",
        "label": "URI",
        "placeholder": "mongodb://",
        "rules": "regex:/^mongodb:///",
        "value": "mongodb://",
        "type": "text",
        "column": 2,
        "disabled": true,
        "checkbox": "enabled"
      }
    ]
  },
  "ssh": {
    "name": "SSH Options",
    "value": "ssh",
    "tips": [
