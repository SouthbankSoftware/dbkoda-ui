        "column": 1,
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "remoteUser",
        "label": "Username",
        "type": "text",
        "value": "",
        "column": 1,
        "disabled": true,
        "checkbox": "enabled"
      },
      {
        "name": "remotePass",
        "label": "Password",
        "type": "password",
        "value": "",
