{
  "basic": {
    "name": "Basic Connection",
    "value": "basic",
    "tips": [
      "For simple connections, you can enter all the connection details on this page.  For a more complex connection (replica set for instance), use the URI field.  For an operating system terminal, to connect via an SSH tunnel or to monitor operating system statistics, checkout the \"SSH Options\""
    ],
    "fields": [
      {
        "name": "alias",
        "label": "Connection Name",
        "value": "Connection - 1",
        "type": "text",
        "column": 1
      },
      {
        "name": "host",
        "label": "Host(s)",
        "value": "localhost",
        "type": "text",
        "column": 1,
        "disabled": false,
        "checkbox": "disabled"
      },
      {
        "name": "port",
        "label": "Port",
        "value": 27017,
        "type": "number",
        "options": {
          "min": 0,
          "max": 65535
        },
        "column": 1,
        "disabled": false,
        "checkbox": "disabled"
      },
      {
        "name": "database",
        "label": "Database",
        "value": "test",
        "options": {
          "tooltip": "The database in which this connection will initially be established"
        },
        "type": "text",
        "column": 1
      },
      {
        "name": "ssl",
        "value": false,
        "label": "Use SSL for all connections",
        "type": "checkbox",
        "column": 2
      },
      {
        "name": "sslAllowInvalidCertificates",
        "value": false,
        "label": "Allow invalid certificates",
        "type": "checkbox",
        "column": 2
      },
      {
        "name": "urlRadio",
        "label": "Use URI instead",
        "value": false,
        "type": "checkbox",
        "column": 2,
        "refFields": ["url", "host", "port"]
      },
      {
        "name": "url",
        "label": "URI",
        "placeholder": "mongodb://",
        "value": "mongodb://",
        "type": "text",
        "column": 2,
        "disabled": true,
        "checkbox": "enabled"
      }
    ]
  },
  "authentication": {
    "name": "Authentication",
    "value": "authentication",
