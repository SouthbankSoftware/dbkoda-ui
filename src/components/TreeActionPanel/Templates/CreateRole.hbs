    createRole: "{{RoleName}}",
    roles: [ {{#each Roles}}
      { role:"{{Role}}", db: "{{Database}}" } {{#unless last}},{{/unless}}
    {{/each}} ],
    privileges: [ {{#each Privileges}}
      { resource: "{{Resource}}", actions: [ "{{Action}}"] } {{#unless last}},{{/unless}}
    {{/each}} ]
  },
  {  w: "majority" }
);
