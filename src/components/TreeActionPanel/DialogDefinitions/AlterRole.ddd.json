{
  "Title": "Alter Role",
  "DefaultValues": {
    "function": "dbkoda_AlterRolePreFill",
    "arguments": [{
        "name": "RoleName",
        "value": "treeNode"
      },
      {
        "name": "parentDB",
        "value": "treeNode.parentDB"
      }
    ]
  },
  "Fields": [
    {
      "name": "Database",
      "type": "Select",
      "readOnly": false,
      "tooltip": "The database which will be associated with the Role",
      "lookup": "dbkoda_listdb"
    },
    {
      "name": "RoleName",
      "type": "Text",
      "readOnly": true
    },
    {
      "name": "Roles",
      "type": "Table",
      "columns": [{
          "name": "Database",
          "type": "Select",
          "readOnly": false,
          "lookup": "dbkoda_listdb"
        },
        {
          "name": "Role",
          "type": "Select",
          "readOnly": false,
          "lookup": "dbkoda_listRoles"
        }]
    },
    {
      "name": "Privileges",
      "type": "Table",
      "columns": [{
          "name": "Database",
          "type": "Select",
          "lookup": "dbkoda_listdb",
          "tooltip": "Applies actions to the Database"
        },
        {
          "name": "Collection",
          "type": "Text",
          "tooltip": "Applies actions to the Collection"
        },
        {
          "name": "Cluster",
          "type": "Boolean",
          "readOnly": false,
          "tooltip": "Applies actions to the cluster (Overrides Database and Collection)",
          "rules": "boolean"
        },
        {
          "name": "Actions",
          "type": "Combo",
          "multi": true,
          "lookup": "dbkoda_listActions"
        }]
    }]
}
