{
    "Title": "Create Index",
    "DefaultValues": {
        "function": "dbenvy_CreateIndexPreFill",
        "arguments": [{
            "name": "Database",
            "value": "treeNode.parentDB"
        }, {
            "name": "CollectionName",
            "value": "treeNode"
        }]
    },
    "Fields": [{
            "name": "Database",
            "type": "Text",
            "readOnly": false,
            "rules": "required"
        },
        {
            "name": "CollectionName",
            "type": "Text",
            "readOnly": true,
            "keyValue": true,
            "rules": "required"
        },
        {
            "name": "IndexName",
            "type": "Text",
            "tooltip": "Name of the index (optional)",
            "optional": true
        },
        {
            "name": "Unique",
            "type": "Boolean",
            "readOnly": false,
            "tooltip": "Are the values in the index unique",
            "default": "false",
            "rules": "boolean"
        },
        {
            "name": "Background",
            "type": "Boolean",
            "readOnly": false,
            "tooltip": "Build index in the background?",
            "optional": true,
            "default": "false",
            "rules": "boolean"
        },
        {
            "name": "Sparse",
            "type": "Boolean",
            "readOnly": false,
            "tooltip": "Only index documents that contain the field",
            "optional": true,
            "default": "false",
            "rules": "boolean"
        },
        {
            "name": "partialFilterExpression",
            "type": "Boolean",
            "readOnly": false,
            "tooltip": "filter condition that limits index scope",
            "optional": true,
            "default": "false"
        },
        {
            "name": "expireAfterSeconds",
            "type": "Numeric",
            "readOnly": false,
            "tooltip": "Time to Live (TTL) for documents",
            "optional": true,
            "default": "false",
            "rules": "integer"
        },
        {
            "name": "Keys",
            "type": "Table",
            "columns": [{
                    "name": "AttributeName",
                    "tooltip": "Name of the attribute to be indexed",
                    "type": "Text",
                    "rules": "required"
                },
                {
                    "name": "Direction",
                    "type": "Numeric",
                    "defaut": "1",
                    "tooltip": "1 for ascending index, -1 for descending index",
                    "rules": "required|integer|in:-1,1"
                }
            ]
        }
    ]
}
