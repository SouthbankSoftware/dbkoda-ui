{
    "Title": "Group By Query",
    "AutoExecute": false,
    "DefaultValues": {
        "function": "dbcoda_GroupByPreFill",
        "arguments": [{
            "name": "Database",
            "value": "treeNode.parentDB"
        }, {
            "name": "CollectionName",
            "value": "treeNode"
        }]
    },
    "Fields": [{
            "name": "Database",
            "type": "Text",
            "readOnly": true,
            "rules": "required"
        },
        {
            "name": "CollectionName",
            "type": "Text",
            "readOnly": true,
            "rules": "required"
        },
        {
            "name": "InitialFilter",
            "label": "Specify Initial Filter?",
            "type": "Boolean"
        },
        {
            "name": "FilterKeys",
            "label": "Initial Filter conditions",
            "type": "Table",
            "columns": [{
                    "name": "AttributeName",
                    "label": "Attribute",
                    "tooltip": "Name of the attribute to be filtered",
                    "type": "Combo",
                    "lookup": "dbcodaListAttributes",
                    "lookup_arguments": [{
                            "name": "db",
                            "value": "treeNode.parentDB"
                        },
                        {
                            "name": "collection",
                            "value": "treeNode"
                        }
                    ]

                },
                {
                    "name": "Value",
                    "Label": "Value to filter",
                    "type": "Text",
                    "tooltip": "Enter the value to search for (quote strings please)"
                }
            ]
        },
        {
            "name": "GroupByKeys",
            "label": "Columns To Group By",
            "type": "Table",
            "columns": [{
                "name": "AttributeName",
                "label": "Attribute",
                "tooltip": "Name of the attribute to be filtered",
                "type": "Combo",
                "lookup": "dbcodaListAttributes",
                "lookup_arguments": [{
                        "name": "db",
                        "value": "treeNode.parentDB"
                    },
                    {
                        "name": "collection",
                        "value": "treeNode"
                    }
                ]

            }]
        },
        {
            "name": "AggregateKeys",
            "label": "Columns To Aggregate",
            "type": "Table",
            "columns": [{
                    "name": "AttributeName",
                    "label": "Attribute",
                    "tooltip": "Name of the attribute to be filtered",
                    "type": "Combo",
                    "lookup": "dbcodaListAttributes",
                    "lookup_arguments": [{
                            "name": "db",
                            "value": "treeNode.parentDB"
                        },
                        {
                            "name": "collection",
                            "value": "treeNode"
                        }
                    ]

                },
                {
                    "name": "Aggregation",
                    "Label": "Aggregation",
                    "type": "Combo",
                    "tooltip": "Aggregation Operation",
                    "lookup": "dbcodaAggOperators"
                }
            ]
        }, {
            "name": "Sort",
            "label": "Sort output?",
            "type": "Boolean"
        },
        {
            "name": "SortKeys",
            "label": "Columns To Sort by",
            "type": "Table",
            "columns": [{
                    "name": "AttributeName",
                    "label": "Attribute",
                    "tooltip": "Name of the attribute to be Sorted (from previous step)",
                    "type": "Text"
                },
                {
                    "name": "Direction",
                    "Label": "Sort Direction",
                    "tooltip": "-1 for descending sort, 1 for ascending",
                    "type": "Combo",
                    "lookup": "dbcoda_sortOptions"
                }
            ]
        }
    ]
}